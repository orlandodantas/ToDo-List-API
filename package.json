{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "API de ToDo List Simplificada",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child --quiet --clear src/server.ts",
    "build": "npx tsc ./src",
    "prettier": "npx prettier --write --ignore-unknown .",
    "lint": "npx eslint src --ext .js,.ts",
    "lint:fix": "npx eslint --fix src --ext .js,.ts",
    "compose:down": "docker-compose down",
    "compose:up": "docker-compose up -d --build",
    "test": "mocha -r ts-node/register/transpile-only ./tests/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test:dev": "ts-node-dev -T --respawn --deps --watch lib node_modules/mocha/bin/mocha tests/*.test.ts --output",
    "test:coverage": "nyc npm run test"
  },
  "author": "Orlando Dantas",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "restify-errors": "^8.0.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.1",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/restify-errors": "^4.3.4",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "prisma": "^3.15.2",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
